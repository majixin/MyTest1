<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.bwf.landz.ui.online.HouseOneDetailActivity">

    <com.bwf.landz.view.HouseDetailTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleBar"
        android:focusableInTouchMode="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="55dp">

            <fragment
                android:id="@+id/detail_fragment2"
                android:name="com.bwf.landz.ui.online.fragment.DetailFragment_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <fragment
                android:id="@+id/detail_fragment3"
                android:name="com.bwf.landz.ui.online.fragment.DetailFragment_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <fragment
                android:id="@+id/detail_fragment4"
                android:name="com.bwf.landz.ui.online.fragment.DetailFragment_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <fragment
                android:id="@+id/detail_fragment1"
                android:name="com.bwf.landz.ui.online.fragment.DetailFragment_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <fragment
                android:id="@+id/detail_fragment05"
                android:name="com.bwf.landz.ui.online.fragment.DetailFragment_05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <fragment
                android:id="@+id/detail_fragment5"
                android:name="com.bwf.landz.ui.online.fragment.DetailFragment_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <fragment
                android:id="@+id/detail_fragment6"
                android:name="com.bwf.landz.ui.online.fragment.DetailFragment_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </ScrollView>


    <com.bwf.landz.view.HouseDetailBottomView
        android:id="@+id/bottomView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
