<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.online.JianShangActivity">

    <RelativeLayout
        android:id="@+id/rl_jianshang_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/zise"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#dadada" />

        <TextView
            android:id="@+id/tv_jianshang_two_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="地图"
            android:textColor="@color/withe" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toLeftOf="@+id/tv_jianshang_two_map"
            android:background="@mipmap/search_layout">

            <EditText
                android:id="@+id/et_jianshang_two_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入楼盘或商圈名称..."
                android:textSize="11sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/jianshang_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rl_jianshang_title"
        android:background="#dadada" />

    <LinearLayout
        android:id="@+id/jianshang_linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/jianshang_view"
        android:background="@color/withe">

        <RelativeLayout
            android:id="@+id/rl_jianshang_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_jianshang_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/filter_down"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="区域" />

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />

        <RelativeLayout
            android:id="@+id/rl_jianshang_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_jianshang_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/filter_down"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="价格" />

        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />

        <RelativeLayout
            android:id="@+id/rl_jianshang_room"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_jianshang_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/filter_down"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="居室" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_jianshang_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_jianshang_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/filter_down"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="类型" />

            </RelativeLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#dadada" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#dadada" />
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#dadada" />

        <RelativeLayout
            android:id="@+id/rl_jianshang_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_jianshang_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/filter_down"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="更多" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/jianshang_view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/jianshang_linearLayout1"
        android:background="#dadada" />

    <com.bwf.landz.view.RefreshListView
        android:id="@+id/lv_online_house"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/jianshang_view1"
        android:divider="@null"
        android:scrollbars="none" />

</RelativeLayout>
